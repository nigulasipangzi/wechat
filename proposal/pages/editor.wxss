}

.product-main {
  height: 140rpx;
  line-height: 60rpx;
  background-color: #fff;
  margin-bottom: 1px;
}

.product-rider {
  display: flex;
  height: 80rpx;
  line-height: 50rpx;
  background-color: #fff;
  margin-bottom: 1px;
}

